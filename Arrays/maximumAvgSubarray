class Solution {
    public double findMaxAverage(int[] nums, int k) {
        int n = nums.length;
        int i = 0 ,j = k-1;
        double sum = 0;

        for(int z = 0 ; z < k ;z++){
            sum+=nums[z];
        }

        double maxAvg = sum/k;

        while(j < n-1){
            j++;
            sum+=nums[j];
            sum-=nums[i];
            i++;
            if(sum/k>maxAvg)maxAvg=sum/k;
        }
        return maxAvg;
    }
}